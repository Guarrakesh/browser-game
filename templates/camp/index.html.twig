{% extends 'base.html.twig' %}

{% block body %}
<div class="camp camp-{{ camp.id }}">
    <h2>{{ camp.name }}</h2>
    <div class="flex justify-end gap-4 mr-4">
        <div class="flex-initial ">Concrete: {{ camp.storage.concrete }}/{{ maxStorage|round }} </div>
        <div class="flex-initial">Metal: {{ camp.storage.metals }}/{{ maxStorage|round }}</div>
        <div class="flex-initial">Circuits: {{ camp.storage.circuits }}/{{ maxStorage|round }} </div>
        <div class="flex-initial">Food: {{ camp.storage.food }}/{{ maxStorage|round }}</div>
    </div>
    <div class="grid grid-cols-3 gap-4 mt-2">
        <div class="col-span-2">
            <h4>Buildings</h4>
            <table>
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Level</th>
                </tr>
                </thead>
                <tbody>

                {% for building in camp.campBuildings %}
                    <tr>
                        <td>
                            <a href="{{ path('camp_building', {type: building.type}) }}">
                                {{ building.type }}
                            </a>
                        </td>
                        <td>{{ building.level }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="">
            <div class="max-w p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                <a href="#">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Production</h5>
                </a>
                <ul class="list-none text-gray-700 font-normal mb-3 dark:text-gray-400">
                    <li>Concrete:<strong> {{ production.concrete|round }}</strong> per hour</li>
                    <li>Metals: <strong>{{ production.metals|round }}</strong> per hour</li>
                    <li>Circuits: <strong>{{ production.circuits|round }}</strong> per hour</li>
                    <li>Food: <strong>{{ production.food|round }}</strong> per hour</li>

                </ul>

            </div>

        </div>
    </div>

{% endblock %}