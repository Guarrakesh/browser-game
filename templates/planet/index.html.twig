{% extends 'planet/base.html.twig' %}

{% block planet_content %}
    <div class="grid grid-cols-3 gap-4 mt-2">
        <div class="col-span-2">
            <h4>Buildings</h4>
            <table>
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Level</th>
                </tr>
                </thead>
                <tbody>

                {% for building in planet.buildings %}
                    {% if route_exists(building.object.name ~ '_index') %}
                    <tr>
                        <td>
                            <a
                                    class="font-medium text-blue-600 dark:text-blue-500 hover:text-blue-900 dark:hover:text-blue-400"
                                    href="{{ path(building.object.name ~ '_index') }}">
                                {{ building.object.name }}
                            </a>
                        </td>
                        <td>{{ building.level }}</td>
                    </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="">
            <div class="rounded shadow dark:bg-slate-100 text-slate-800">
                <div class="px-4 py-2 ">
                    <h2 class="font-display text-slate-800 text-xl lg:text-3xl uppercase">Production</h2>
                </div>
                <div class="px-4 py-2">
                {% set production = planet.hourlyProduction %}
                <ul class="list-none text-slate-800 font-normal mb-3 dark:text-slate-800">
                    <li>Concrete:<strong> {{ production.concrete|round }}</strong> per hour</li>
                    <li>Metals: <strong>{{ production.metals|round }}</strong> per hour</li>
                    <li>Circuits: <strong>{{ production.circuits|round }}</strong> per hour</li>
                    <li>Food: <strong>{{ production.food|round }}</strong> per hour</li>

                </ul>
                </div>

            </div>

        </div>


{% endblock %}