<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="dark:bg-slate-700 dark:text-slate-200 bg-slate-100 text-slate-900 dark:text-slate-100">
{% for type, messages in app.flashes() %}
    {% for message in messages %}
        <twig:Alert type="{{ type }}">
            {{ message }}
        </twig:Alert>
    {% endfor %}

{% endfor %}

<div class=" container m-auto mt-6">
    {% block body %}
        <div class="camp camp-{{ camp.id }}">
            <h2><a href="{{ path('camp', { campId: camp.id}) }}">{{ camp.name }}</a></h2>
            <div class="flex justify-end gap-4 mr-4">
                <div class="flex-initial ">Concrete: {{ camp.storage.concrete }}/{{ campFacade.getMaxStorage(camp)|round }} </div>
                <div class="flex-initial">Metal: {{ camp.storage.metals }}/{{ campFacade.getMaxStorage(camp)|round }}</div>
                <div class="flex-initial">Circuits: {{ camp.storage.circuits }}/{{ campFacade.getMaxStorage(camp)|round }} </div>
                <div class="flex-initial">Food: {{ camp.storage.food }}/{{ campFacade.getMaxStorage(camp)|round }}</div>
            </div>
            {% block content %}
            {% endblock %}
        </div>
    {% endblock %}
</div>
</body>
</html>
