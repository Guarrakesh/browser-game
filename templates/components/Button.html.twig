{% props color = 'primary', disabled = false, outline = false, size = 'sm', anchor = false %}

{% set button = cva({
    base: 'flex flex-row items-center justify-center gap-2 font-display uppercase focus:ring-4 font-medium focus:outline-none  rounded-lg shadow-lg cursor-pointer',
    variants: {
        color: {
            primary: 'bg-primary focus:ring-primary/50 text-onprimary hover:text-onprimary',
            accent: 'bg-accent-primary focus:ring-accent/50 text-onaccent hover:text-onaccent',
            success: 'bg-success-primary focus:ring-success-accent dark:focus:ring-success-secondary',
            error: 'bg-error-primary focus:ring-error-accent dark:focus:ring-error-secondary',
            warning: 'bg-warning-primary focus:ring-warning-accent dark:focus:ring-warning-secondary',
            info: 'bg-info-primary focus:ring-info-accent dark:focus:ring-info-secondary'
        },
        size: {

            sm: 'text-sm px-6 py-2',
            md: 'text-base px-8 py-2',
            lg: 'text-ld px-10 py-2'
        },
        outline: {
            true: 'bg-transparent',
            false: null,
        },
        disabled: {
            false: null,
            true: ["opacity-50", "cursor-not-allowed", "focus:ring-0"]
        }
    },

    compoundVariants: [
        {
            outline: true,
            color: 'primary',
            class: 'bg-transparent hover:bg-primary ring-2 ring-primary/50 text-body-onprimary'
        },
        {
            outline: true,
            color: 'accent',
            class: 'bg-transparent hover:bg-accent ring-2 ring-accent/50  text-body-onprimary'
        },
        {
            outline: true,
            color: 'success',
            class: 'bg-transparent hover:bg-success-primary ring-2 ring-success-secondary '
        },
        {
            outline: true,
            color: 'error',
            class: 'bg-transparent hover:bg-error-primary ring-2 ring-error-primary'
        },
        {
            outline: true,
            color: 'warning',
            class: 'bg-transparent hover:bg-warning-primary ring-2 ring-warning-primary'
        },
        {
            outline: true,
            color: 'info',
            class: 'bg-transparent hover:bg-info-primary ring-2 ring-info-primary'
        },

    ]


}) %}


{% if anchor %}
    <a
            {{ attributes.without('class') }}
            class="{{ button.apply({ color, size, disabled, outline }, attributes.render('class'))|tailwind_merge }}">
        {{ block('content') }}
    </a>
{% else %}
    <button
            {{ attributes.without('class') }}
            class="{{ button.apply({ color, size, disabled, outline}, attributes.render('class'))|tailwind_merge }}">
        {{ block('content') }}

    </button>
{% endif %}
