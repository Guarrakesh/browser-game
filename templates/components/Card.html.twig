<div href="#" class="card {{ attributes.render('class')|tailwind_merge }}">
    {% if title is defined %}
        <div class="card-header">
            <h2 class="font-display text-2xl lg:text-3xl uppercase ">{{ title }}</h2>
        </div>

    {% endif %}

    <div {{ attributes.nested('body').defaults({'class': 'card-body'}) }}>
        {% block content %}
        {% endblock %}

        <div class="mt-2 flex flex-row items-center justify-between">
            {% block footer %}
            {% endblock %}

        </div>
    </div>


</div>