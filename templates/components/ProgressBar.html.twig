{% props value = 0 %}
<div class="w-full bg-gray-200 rounded-full dark:bg-gray-700" {{ attributes.without('class') }}>
    <div
            {{ attributes.nested('progressBar') }}
            class="overflow-hidden transition-width duration-1000 progress-bar bg-primary text-xs font-medium text-blue-100 text-center p-0.5 leading-none rounded-full"
         style="width: {{ value }}%"></div>
</div>